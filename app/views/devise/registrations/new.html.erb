<div class='col-sm-4 col-sm-offset-4'>
  <h1 class='text-center title'>Sign up</h1>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class='form-group'>
        <div class='controls with-icon-over-input'>
          <%= f.email_field :email, :autofocus => true, :placeholder => "E-mail", :class => "form-control" %>
          <i class='icon-user text-muted'></i>
        </div>
      </div>

      <div class='form-group'>
        <div class='controls with-icon-over-input'>
          <%= f.password_field :password, :placeholder => "Password", :class => "form-control"  %>
          <i class='icon-lock text-muted'></i>
        </div>
      </div>

      <div class='form-group'>
        <div class='controls with-icon-over-input'>
          <%= f.password_field :password_confirmation, :placeholder => "Password confirmation", :class => "form-control"  %>
          <i class='icon-lock text-muted'></i>
        </div>
      </div>

      <div><%= f.submit "Sign up",:class => 'btn btn-primary' %></div>
  <% end %>

  <div class='text-center'>
    <hr class='hr-normal'>
    <%= render "devise/shared/links" %>
  </div>
</div>


